# Ansible Inventory for k3s Multi-Site HomeLab
# Replace ZeroTier IPs with your actual node IPs
# 
# Site names are configurable in boostrap/config.sh:
#   HOMELAB_PRIMARY_SITE_ID (default: primary)
#   HOMELAB_SECONDARY_SITE_ID (default: secondary)

[k3s_servers_primary]
k3s-primary-server-1 ansible_host=10.147.17.10 ansible_user=root site_name=primary site_human_name="Home"

[k3s_agents_primary]
k3s-primary-agent-1 ansible_host=10.147.17.11 ansible_user=root site_name=primary site_human_name="Home"
k3s-primary-agent-2 ansible_host=10.147.17.12 ansible_user=root site_name=primary site_human_name="Home"

[k3s_servers_secondary]
k3s-secondary-server-1 ansible_host=10.147.17.20 ansible_user=root site_name=secondary site_human_name="Remote"

[k3s_agents_secondary]
k3s-secondary-agent-1 ansible_host=10.147.17.21 ansible_user=root site_name=secondary site_human_name="Remote"
k3s-secondary-agent-2 ansible_host=10.147.17.22 ansible_user=root site_name=secondary site_human_name="Remote"

# Group all servers
[k3s_servers:children]
k3s_servers_primary
k3s_servers_secondary

# Group all agents
[k3s_agents:children]
k3s_agents_primary
k3s_agents_secondary

# Primary site cluster (all nodes)
[cluster_primary:children]
k3s_servers_primary
k3s_agents_primary

# Secondary site cluster (all nodes)
[cluster_secondary:children]
k3s_servers_secondary
k3s_agents_secondary

# All k3s nodes
[k3s_cluster:children]
k3s_servers
k3s_agents

# Variables for all nodes
[k3s_cluster:vars]
k3s_version=v1.28.4+k3s2
ansible_python_interpreter=/usr/bin/python3
