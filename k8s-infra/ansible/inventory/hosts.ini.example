# Ansible Inventory for k3s Multi-Site HomeLab
# Replace ZeroTier IPs with your actual node IPs

[k3s_servers_site_a]
k3s-a-server-1 ansible_host=10.147.17.10 ansible_user=root site_name=site-a

[k3s_agents_site_a]
k3s-a-agent-1 ansible_host=10.147.17.11 ansible_user=root site_name=site-a
k3s-a-agent-2 ansible_host=10.147.17.12 ansible_user=root site_name=site-a

[k3s_servers_site_b]
k3s-b-server-1 ansible_host=10.147.17.20 ansible_user=root site_name=site-b

[k3s_agents_site_b]
k3s-b-agent-1 ansible_host=10.147.17.21 ansible_user=root site_name=site-b
k3s-b-agent-2 ansible_host=10.147.17.22 ansible_user=root site_name=site-b

# Group all servers
[k3s_servers:children]
k3s_servers_site_a
k3s_servers_site_b

# Group all agents
[k3s_agents:children]
k3s_agents_site_a
k3s_agents_site_b

# Site A cluster (all nodes)
[cluster_site_a:children]
k3s_servers_site_a
k3s_agents_site_a

# Site B cluster (all nodes)
[cluster_site_b:children]
k3s_servers_site_b
k3s_agents_site_b

# All k3s nodes
[k3s_cluster:children]
k3s_servers
k3s_agents

# Variables for all nodes
[k3s_cluster:vars]
k3s_version=v1.28.4+k3s2
ansible_python_interpreter=/usr/bin/python3
